<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/tb_equipment_inspection"
        layout="@layout/view_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="设备名称：设备名设备名称设备名称"
            android:textSize="18dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上次记录情况："
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_buttonwhite"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设施编号："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_check_stat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备状态："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_rap_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报废时间："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_check_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保养人员："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_record_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记录人员："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_check_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记录日期："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_check_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记录详情："
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="本次记录情况："
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备状态："
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正常"
                        android:textColor="@color/color_blue"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_unattended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="待修"
                        android:textColor="@color/text_color"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_lost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="遗失"
                        android:textColor="@color/text_color"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_damaged"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="损毁"
                        android:textColor="@color/text_color"
                        android:textSize="15dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_buttonwhite"
                    android:gravity="left|top"
                    android:hint="请输入本次检查记录内容"
                    android:lines="3"
                    android:padding="5dp"
                    android:textSize="14dp" />


            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_login_color"
            android:text="提交记录"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
